{

  "manifest_version": 2,
  "name": "sg-gen",
  "version": "1.0",

  "description": "Generate simple style guide from page's CSS.",
   "homepage_url": "https://github.com/saintsebastian/sg-gen",

  "icons": {
    "48": "icons/sg-gen-48.png",
    "96": "icons/sg-gen-96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
   "default_icon": "icons/sg-gen-32.png",
   "default_title": "SG"
 }

}
